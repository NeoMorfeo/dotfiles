[user]
	name = Guillermo Santos Melgar
[color]
	ui = true
[alias]
	ci = commit
	co = checkout
	st = status
	s = status --short
	sb = status --short --branch
	graph = log --graph --oneline
	l = log --graph --pretty=\"%Cred%h %Cgreen%ai %Cblue%an%Creset %s%C(yellow)%d\"
	le = log --graph --pretty=\"%Cred%h %Cgreen%ai %Cblue%an <%ae>%Creset %s%C(yellow)%d\"
	rso = remote show origin
	d = diff --color-words
	dc = diff --cached --color-words
[pull]
	rebase = true
[merge]
	tool = meld
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
